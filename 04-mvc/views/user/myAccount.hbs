<div class="container mt-5">
    <h1>
        My account!!!
    </h1>
    <p>Use it to update your name.</p>
</div>
{{#if message}}   
    <div class="alert alert-success w-25">{{ message }}</div>    
{{/if}}
<div class="container mt-5">
    <form method="put" action="user/account">
        <div class="mb-3">
            <label for="name" class="form-label">Name: </label>
            <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email: </label>
            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
        </div>
        <div class="mb-3 text-center ">
            <button type="submit" class="btn btn-success w-25">Update</button>
            <button type="reset" class="btn btn-danger w-25">Reload</button>
        </div>
    </form>
</div>