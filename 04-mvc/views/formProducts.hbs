<div class="container mt-5">
  <h1>Product register</h1>
</div>

<div class="container mt-5">
    <form method="post" action="/user/form">
        <div class="mb-3">
            <label for="name" class="form-label">Name: </label>
            <input type="name" class="form-control" id="name" name="name" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="price" class="form-control" id="price" name="price">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="image" class="form-control" id="image" name="image">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description </label>
            <input type="description" class="form-control" id="description" name="description">
        </div>
        <div class="mb-3 text-center ">
            <button type="submit" class="btn btn-primary w-25">Register</button>
            <button type="reset" class="btn btn-danger w-25">Reload</button>
        </div>
    </form>
</div>
